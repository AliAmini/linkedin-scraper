{
  "name": "linkedin-scraper",
  "version": "1.0.0",
  "description": "Scrape LinkedIn using Node.js, TypeScript, Prisma, MySQL, and Playwright",
  "main": "dist/index.js",
  "license": "ISC",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node --transpile-only src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "scrape:people": "ts-node --transpile-only src/index.ts scrape:people",
    "fetch:companies": "ts-node --transpile-only src/index.ts fetch:companies",
    "connect": "ts-node --transpile-only src/index.ts connect",
    "playwright:install": "npx playwright install chromium"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "axios": "^1.11.0",
    "dotenv": "^16.4.5",
    "mysql2": "^3.11.0",
    "playwright": "^1.46.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
